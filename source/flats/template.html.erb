<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="header" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>')">
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-1 flat-section">
      <div class="flat-card">
        <div class="flat-owner">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
          <p><%= owner %></p>
        </div>
        <div class="flat-info">
          <h3><%= flat.description %></h3>
          <p><%= flat.city_name %></p>
          <div class="flat-rating">
            <% flat.rating.times do |star| %>
               <i class="fa fa-star yellow"></i>
            <% end %>
            <% (5 - flat.rating).times do |star| %>
              <i class="fa fa-star"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="flat-amenities">
        <p>Amenities:</p>
        <div class="row">
          <div class="col-xs-12 col-md-5">
            <ul class="amenity-list">
              <% if flat.wifi %>
                <li><i class="fa fa-wifi"></i> Wifi
              <% end %></li>
              <% if flat.kitchen %>
                <li><i class="fa fa-cutlery"></i> Kitchen
              <% end %></li>
              <% if flat.tv %>
                <li><i class="fa fa-desktop"></i> TV
              <% end %></li>
              <% if flat.laundry %>
                <li><i class="fa fa-tint"></i> Washing machine
              <% end %></li>
            </ul>
          </div>
          <div class="col-xs-12 col-md-5">
            <ul class="amenity-list">
            <li><i class="fa fa-user"></i>Accomodates: <%= flat.beds %> </li>
            <li><i class="fa fa-bed"></i>Rooms: <%= flat.rooms %> </li>
            <li><i class="fa fa-bath"></i>Bathrooms: <%= flat.bathrooms %> </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-4 booking-form">
      <form action="">
        <h3>Book this flat</h3>
        <div class="form-group">
          <label for="checkin">Check-in</label>
          <input type="text" class="form-control">
          <label for="checkout">Check-out</label>
          <input type="text" class="form-control">
        </div>
        <div class="form-group">
          <select name="" id="" class="form-control">
            <option>1 guest</option>
            <option>2 guests</option>
            <option>3 guests</option>
          </select>
        </div>
        <a href="#" class="btn btn-danger">Book it</a>
      </form>
    </div>
  </div>
</div>
